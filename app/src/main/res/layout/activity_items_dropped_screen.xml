<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/merchant_color1"
    tools:context=".ui.Activity.ItemsDroppedActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/delivery_color"
            android:orientation="horizontal"
            android:paddingTop="@dimen/_14sdp"
            android:paddingBottom="@dimen/_14sdp"
            android:weightSum="1">

            <ImageView
                android:id="@+id/dropped_back"
                android:layout_width="@dimen/_20sdp"
                android:layout_height="@dimen/_20sdp"
                android:layout_gravity="center"
                android:layout_marginLeft="@dimen/_20sdp"
                android:layout_marginTop="@dimen/_2sdp"
                android:padding="@dimen/_3sdp"
                android:src="@drawable/path_gray_img" />

            <com.iprismtech.delivery_boy.custom_fonts.CustomTextViewBold
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginLeft="@dimen/_10sdp"
                android:layout_weight="0.18"
                android:gravity="start"
                android:text="Order"
                android:textColor="@color/white"
                android:textSize="@dimen/_15sdp" />

            <com.iprismtech.delivery_boy.custom_fonts.CustomTextViewBold
                android:layout_width="0dp"
                android:id="@+id/invoice_tv"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_weight="0.8"
                android:gravity="start"
                android:text="#45869875214"
                android:textColor="@color/white"
                android:textSize="@dimen/_15sdp" />
        </LinearLayout>

        <android.support.v7.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/_10sdp"
            android:layout_marginTop="@dimen/_10sdp"
            android:layout_marginRight="@dimen/_10sdp"
            android:layout_marginBottom="@dimen/_10sdp"
            app:cardCornerRadius="@dimen/_6sdp"
            app:cardElevation="1.5dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/lay_out_shape"
                android:orientation="vertical"
                android:paddingTop="@dimen/_15sdp"
                android:paddingBottom="@dimen/_25sdp">

                <com.iprismtech.delivery_boy.custom_fonts.CustomTextViewBold
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginBottom="@dimen/_15sdp"
                    android:gravity="center"
                    android:text="Warehouse Details"
                    android:textColor="@color/black"
                    android:textSize="@dimen/_15sdp" />

                <com.iprismtech.delivery_boy.custom_fonts.CustomTextViewsemibold
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/_10sdp"
                    android:layout_marginTop="@dimen/_5sdp"
                    android:text="Drop Address"
                    android:textSize="@dimen/_13sdp" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/_3sdp"
                    android:orientation="horizontal"
                    android:weightSum="1">

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/_10sdp"
                        android:layout_weight="0.9"
                        android:orientation="vertical">

                        <com.iprismtech.delivery_boy.custom_fonts.CustomTextViewBold
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:id="@+id/adrs_tv"
                            android:layout_gravity="center"
                            android:gravity="start"
                            android:text="Lorem Ipsum is dummy\ntext which is used for the\ngraphic designing"
                            android:textColor="@color/black"
                            android:textSize="@dimen/_13sdp" />

                        <com.iprismtech.delivery_boy.custom_fonts.CustomTextViewBold
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="505659"
                            android:id="@+id/pincode_tv"
                            android:textColor="@color/black"
                            android:textSize="@dimen/_13sdp" />
                    </LinearLayout>

                    <de.hdodenhof.circleimageview.CircleImageView
                        android:id="@+id/im_map"
                        android:layout_width="@dimen/_35sdp"
                        android:layout_height="@dimen/_35sdp"
                        android:layout_gravity="center"
                        android:padding="@dimen/_4sdp"
                        android:src="@drawable/send_img" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/_10sdp"
                    android:orientation="horizontal"
                    android:weightSum="1">

                    <com.iprismtech.delivery_boy.custom_fonts.CustomTextViewsemibold
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_weight="0.88"
                        android:text="Contact Number"
                        android:id="@+id/contact_tv"
                        android:textSize="@dimen/_13sdp" />

                    <de.hdodenhof.circleimageview.CircleImageView
                        android:layout_width="@dimen/_35sdp"
                        android:layout_height="@dimen/_35sdp"
                        android:layout_gravity="center"
                        android:layout_marginRight="@dimen/_5sdp"
                        android:padding="@dimen/_4sdp"
                        android:id="@+id/iv_msg"

                        android:src="@drawable/message_img" />

                    <de.hdodenhof.circleimageview.CircleImageView
                        android:layout_width="@dimen/_35sdp"
                        android:layout_height="@dimen/_35sdp"
                        android:layout_gravity="center"
                        android:padding="@dimen/_4sdp"
                        android:layout_marginLeft="@dimen/_5sdp"
                        android:id="@+id/iv_call"
                        android:src="@drawable/cell_blue_img" />
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/dropped_items_lay_out"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginTop="@dimen/_50sdp"
                    android:background="@drawable/welcome_shape"
                    android:orientation="vertical"
                    android:paddingHorizontal="@dimen/_65sdp"
                    >

                    <com.iprismtech.delivery_boy.custom_fonts.CustomTextViewBold
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:gravity="center"
                        android:text="Items Dropped"
                        android:textColor="@color/white"
                        android:paddingTop="@dimen/_12sdp"
                        android:paddingBottom="@dimen/_12sdp"
                        android:textSize="@dimen/_13sdp" />
                </LinearLayout>

            </LinearLayout>

        </android.support.v7.widget.CardView>
    </LinearLayout>
</android.support.constraint.ConstraintLayout>